<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchTravel"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_explanation"
            style="@style/MyTextViewStyle_Explanation"
            android:layout_width="wrap_content"
            android:text="@string/explanation" />

        <TextView
            android:id="@+id/textView_price_expected"
            style="@style/MySpinnerTitle"
            android:text="Precio esperado:" />

        <Spinner
            android:id="@+id/spinner_price_expected"
            style="@style/MySpinnerStyle"
            android:entries="@array/spinner_price_expected" />

        <TextView
            android:id="@+id/textView2"
            style="@style/MySpinnerTitle"
            android:text="Cantidad de personas:" />

        <Spinner
            android:id="@+id/spinner_amount_people"
            style="@style/MySpinnerStyle"
            android:entries="@array/spinner_amount_people" />

        <TextView
            android:id="@+id/textView3"
            style="@style/MySpinnerTitle"
            android:text="Tipo de paquete:" />

        <Spinner
            android:id="@+id/spinner_category"
            style="@style/MySpinnerStyle"
            android:entries="@array/spinner_tipo_viaje" />

        <TextView
            android:id="@+id/textView6"
            style="@style/MySpinnerTitle"
            android:text="Tipo de viajero:" />

        <Spinner
            android:id="@+id/spinner_traveller_type"
            style="@style/MySpinnerStyle"
            android:entries="@array/spinner_tipo_viajero" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/button_search"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="searchTravel"
                android:text="Buscar" />
        </LinearLayout>


    </LinearLayout>


</android.widget.LinearLayout>