<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="190"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_tourist_destiny_name"
            style="@style/MyTextViewStyle_Text"
            android:text="Manuel Antonio" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_tourist_destiny"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/manuelantonio" />


    </LinearLayout>


</LinearLayout>