<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_travel_offer"
            style="@style/MyTextViewStyle_Text"
            android:text="Manuel Antonio" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_offers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/manuelantonio" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_price_offer"
            style="@style/MyTextViewStyle_Text"
            android:text="Desde: $ 5.000" />

    </LinearLayout>


</LinearLayout>