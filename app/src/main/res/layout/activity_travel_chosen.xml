<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TravelChosen"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="140"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            style="@style/MyTextViewStyle_Title"
            android:text="Manuel Antonio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/manuelantonio" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textView_price"
            style="@style/MyTextViewStyle_Text"
            android:text="Precio: $ 5.000" />

        <TextView
            android:id="@+id/textView_people"
            style="@style/MyTextViewStyle_Text"
            android:text="Cantidad de personas: 4" />

        <TextView
            android:id="@+id/textView_hotel"
            style="@style/MyTextViewStyle_Text"
            android:text="Hotel incluido: NO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="150"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volver" />

            <Button
                android:id="@+id/button_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pagar" />
        </LinearLayout>


    </LinearLayout>


</android.widget.LinearLayout>