<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TravelChosen"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_travel_name"
            style="@style/MyTextViewStyle_Title"
            android:text="Manuel Antonio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/linear_layout_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="130"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_price_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Precio: $ 5.000" />

                <TextView
                    android:id="@+id/textView_airport_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Cantidad de personas: 4" />

                <TextView
                    android:id="@+id/textView_hotel_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Hotel incluido: NO" />

                <TextView
                    android:id="@+id/textView_start_date_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Fecha de inicio: 20/7/2020" />

                <TextView
                    android:id="@+id/textView_end_date_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Fecha de fin: 4/9/2020" />

                <TextView
                    android:id="@+id/textView_duration_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Duracion: 5 dias" />

                <TextView
                    android:id="@+id/textView_description_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Descripcion: En este viaje su buscara aprender de aves de costa rica" />

                <TextView
                    android:id="@+id/textView_tourist_type_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Tipos de turistas: amantes de las aves" />

                <TextView
                    android:id="@+id/textView_route_type_travel_chosen"
                    style="@style/MyTextViewStyle_Text"
                    android:text="Ruta: para cualquier tipo de persona o vehiculo" />




            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="170"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="back"
                android:text="Volver" />

            <Button
                android:id="@+id/button_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="makePayment"
                android:text="Pagar" />
        </LinearLayout>


    </LinearLayout>


</android.widget.LinearLayout>